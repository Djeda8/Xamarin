<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation_Service_Menu.Views.Main.MainView">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="Center"
                     Spacing="50"
                     Padding="0,50,0,50">
            <Button Text="Go Screen 1" 
                    Command="{Binding GoScreen1Command}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
            </Button>
            <Button Text="Go Screen 2" 
                    Command="{Binding GoScreen2Command}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
            </Button>
            <Button Text="Go Screen 3" 
                    Command="{Binding GoScreen3Command}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
            </Button>
            <Button Text="Go Screen 4" 
                    Command="{Binding GoScreen4Command}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>